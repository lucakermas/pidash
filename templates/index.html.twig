{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col text-center">
            <h2 class="mt-3 text-white text-uppercase">Welcome back, {{ name }}.</h2>
        </div>
    </div>
    <div class="row mt-3 justify-content-center">
        <div class="col-lg-5">
            <div class="widget text-center">
                <h6 class="text-uppercase">CPU Temperature</h6>
                <div class="temperature">
                    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" id="arc-background" width="200px" height="160px">
                        <circle cx="100" cy="100" r="100" fill="#e66686" mask="url(#temp-mask)"></circle>

                        <mask id="temp-mask">
                            <rect x="0" y="0" width="200" height="200" fill="#fff"></rect>
                            <path d="M 100 100 L -378.5 360 L 585 360 Z" fill="#000"></path>
                            <circle cx="100" cy="100" r="70px"></circle>
                        </mask>
                    </svg>

                    <div class="temp-text">
                        <h3>42 °C</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="widget text-center">
                <h6 class="text-uppercase">Weather at Berlin</h6>
                <p class="mb-4 pt-4">
                    <i style="font-size: 4.5rem;" class="wi {{ weather.icon }}"></i>
                    {#                    {{ dump(weather) }}#}
                </p>

                <div>
                    <h3>{{ weather.temperature }} °C</h3>
                </div>
            </div>
        </div>
    </div>
{% endblock %}